@import '../../wxParser/index.wxss';

.container {
  display: flex;
  min-height: 100vh;
}

.article {
  display: flex;
  flex-wrap: wrap;
  align-content: center;
  width: 95%;
  padding: 20rpx 0;
  margin: 0 auto;
}

.title {
  font-size: 30px;
  font-family: Arial-BoldMT;
  font-weight: normal;
  color: rgba(51, 51, 51, 1);
  line-height: 58px;
  width: 100%;
  text-align: center;
}

.generate {
  color: #999999;
  width: 100%;
  display: flex;
  flex-wrap: no-wrap;
  justify-content: space-around;
  font-size: 14px;
  margin-bottom: 30rpx;
}

.publish-date {
  width: 48%;
  text-align: right;
}

.author {
  width: 48%;
  text-align: left;
}

.content {
  font-size: 16px;
  color: rgba(51, 51, 51, 1);
  line-height: 24px;
  width: 100%;
}
